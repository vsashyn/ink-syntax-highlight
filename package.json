{
	"name": "ink-syntax-highlight",
	"version": "2.0.0",
	"description": "Synax highlight component for Ink",
	"license": "MIT",
	"repository": "vsashyn/ink-syntax-highlight",
	"author": {
		"name": "Vitalii Sashyn",
		"email": "sashyn.v@gmail.com",
		"url": "github.com/vsashyn"
	},
	"type": "module",
	"main": "build",
	"types": "build/index.d.ts",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"test": "tsc && xo",
		"build": "tsc && xo",
		"prepare": "tsc"
	},
	"files": [
		"build"
	],
	"keywords": [
		"ink",
		"code",
		"syntax",
		"component",
		"jsx",
		"react"
	],
	"dependencies": {
		"cli-highlight": "^2.1.9"
	},
	"devDependencies": {
		"@ava/babel": "^2.0.0",
		"@babel/preset-react": "^7.26.3",
		"@sindresorhus/tsconfig": "^7.0.0",
		"@types/react": "^18.3.18",
		"@vdemedes/prettier-config": "^1.0.0",
		"ava": "^6.2.0",
		"eslint-config-xo-react": "^0.23.0",
		"eslint-plugin-prettier": "^3.4.1",
		"eslint-plugin-react": "^7.20.0",
		"eslint-plugin-react-hooks": "^4.0.4",
		"husky": "^4.2.5",
		"import-jsx": "^4.0.0",
		"ink": "^5.1.0",
		"ink-testing-library": "^2.0.0",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"react": "^18.3.1",
		"typescript": "^5.7.2",
		"xo": "^0.32.0"
	},
	"peerDependencies": {
		"ink": "^5.1.0",
		"react": "^18.3.1"
	},
	"ava": {
		"babel": {
			"testOptions": {
				"presets": [
					"@babel/preset-react"
				]
			}
		}
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		},
		"ignores": [
			"./build"
		]
	},
	"prettier": "@vdemedes/prettier-config",
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	}
}
